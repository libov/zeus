macro herapdf  q2 x1 x2  first=1
if [first]>0 then
  exec Load
endif

      set fcol 2
      set ltyp 1
      set lwid 3.
      icol=2
      exec redxs_herapdf xstyp=1 xqmin=[x1] xqmax=[x2] npts=400 xqfix=$rsigma([q2]) hcol=120[icol] xq2=x fact=1.
      mess  redxs_herapdf called
     wait
* central predictions
      set fcol 2
      fun1 8 redx(x,$rsigma([q2]),4,0) 5000 [x1] [x2] s
      mess redx called
      set fcol 1

      wait
return



